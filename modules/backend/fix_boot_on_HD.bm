fix_boot_on_HD()
{
	logit "fix_boot_on_installed system"
	# home of user on installed system
	local INSTHOME="${TARGET_MNT_POINT}/home/${USER_NAME}"
	cat >>${TARGET_MNT_POINT}/etc/init.d/bootmisc.sh <<EOS
FN=${INSTHOME}/.config/chromium/SingletonLock
test "$1" = "start" && test -e \$FN || rm \$FN
EOS
}